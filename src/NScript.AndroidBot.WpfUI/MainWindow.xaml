<Window x:Class="NScript.AndroidBot.WpfUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NScript.AndroidBot.WpfUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="400" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="200"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" x:Name="cvs"></Image>
        <TextBox Grid.Row="1" x:Name="tbMsgs" TextWrapping="WrapWithOverflow"></TextBox>
    </Grid>
</Window>
